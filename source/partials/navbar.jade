.navbar.navbar-inverse(ng-controller='NavbarController')
    .container
        .navbar-header
          button.navbar-toggle(
              type='button', 
              ng-click='Toggle()')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='http://www.cooldudecity.com') Deeper Into Cool Dude City
        .navbar-collapse(collapse='IsCollapsed')
          ul.nav.navbar-nav
            li(ng-class="{active:IsActive('/')}")
              a(href='#/') 
                | Meta Deck Lists
            li(ng-class="{active:IsActive('/meta')}")
              a(href='#/meta') 
                | Meta Tracker
            li(ng-class="{active:IsActive('/cardlookup')}")
              a(href='#/cardlookup') 
                | Card Lookup
            li.dropdown
              a.dropdown-toggle(href="", 
                  data-toggle="dropdown", 
                  role="button", 
                  aria-haspopup="true", 
                  aria-expanded="false")
                | Useful Links
              ul.dropdown-menu
                li(ng-repeat="link in Links")
                  a(target="_blank", 
                      href="{{ link.Site }}", 
                      tooltip="{{ link.Desc }}", 
                      tooltip-append-to-body="true", 
                      tooltip-placement="right")
                    | {{ link.Name }}